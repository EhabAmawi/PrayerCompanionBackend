// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int    @id @default(autoincrement())
  firebaseUid String @unique

  PrayerRecord PrayerRecord[]
}

model PrayerRecord {
  id     Int      @id @default(autoincrement())
  userId Int      @unique
  date   DateTime

  user User @relation(fields: [userId], references: [id])

  PrayerStatus PrayerStatus[]
}

model PrayerStatus {
  id             Int            @id @default(autoincrement())
  prayerRecordId Int            @unique
  prayerName     PrayerNames
  prayerStatus   PrayerStatuses @default(None)

  prayerRecord PrayerRecord @relation(fields: [prayerRecordId], references: [id])
}

enum PrayerStatuses {
  Jamaah
  OnTime
  Late
  Missed
  Qadaa
  None
}

enum PrayerNames {
  Fajr
  Dhuhr
  Asr
  Maghrib
  Isha
}
